<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/background_harry1"
    >



    <TextView
        android:id="@+id/api_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harry Potter"
        android:textColor="#fff"
        android:fontFamily="@font/girassol_regular"
        android:layout_toRightOf="@id/api_img"
        android:background="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/api_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="40sp"
        android:layout_toRightOf="@id/api_img"
        android:text="Male"
        />
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_potter">
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/card_harry"
        android:layout_margin="20dp">

    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="5dp"
        android:src="@drawable/harry_img"
        android:layout_marginRight="8dp"
        />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harry Potter"
            android:textColor="#fff"
            android:fontFamily="@font/girassol_regular"
            android:background="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Male"
            />


    </RelativeLayout>






</RelativeLayout>